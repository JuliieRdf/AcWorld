
<%= simple_form_for(@person) do |f| %>


  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>



  

    <div class="formmulaire">
 
    <%= f.input :name, label:'Nom' , placeholder: 'Nom' %>
    <%= f.input :photo, label:'URL Photo' , placeholder: 'URL Photo' %>
    <%= f.input :species, label:'Espèce' , placeholder: 'Espèce' %>
    <%= f.input :personality, label:'Personnalité' , placeholder: 'Personnalité' %>

</div>


  <div class="form-actions">
  <button type="button" class="btn btn-success"> <%= f.button :submit >"Valider"%></button>
  </div>
<% end %>
